      </position>
      <size>
        <width>50%</width>
      </size>
    </application>
    <application title="MPlayer">
      <decor>no</decor>
    </application>
    <application title="Nitrogen">
      <position force="yes">
        <x>center</x>
        <y>center</y>
      </position>
    </application>
