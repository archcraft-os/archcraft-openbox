<!-- ################################ General Settings ################################ -->
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- Resistance -->
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>
  <!-- Focus -->
  <focus>
    <focusNew>yes</focusNew>
    <focusLast>yes</focusLast>
    <followMouse>no</followMouse>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <!-- Placement -->
  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Mouse</monitor>
    <primaryMonitor>Mouse</primaryMonitor>
  </placement>
  <!-- Theme -->
  <theme>
    <name>Arc-Dark</name>
    <titleLayout>DLIMC</titleLayout>
    <keepBorder>no</keepBorder>
    <animateIconify>yes</animateIconify>
    <font place="ActiveWindow">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuHeader">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuItem">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>JetBrains Mono</name>
      <size>9</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
  </theme>
  <!-- Workspace -->
  <desktops>
    <number>5</number>
    <firstdesk>0</firstdesk>
    <popupTime>0</popupTime>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
      <name>5</name>
    </names>
  </desktops>
  <!-- Resize -->
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Always</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>10</x>
      <y>10</y>
    </popupFixedPosition>
  </resize>
  <!-- Margin -->
  <margins>
    <top>48</top>
    <bottom>10</bottom>
    <left>10</left>
    <right>10</right>
  </margins>
  <!-- Dock -->
  <dock>
    <position>Bottom</position>
    <floatingX>0</floatingX>
    <floatingY>0</floatingY>
    <noStrut>no</noStrut>
    <stacking>Above</stacking>
    <direction>Vertical</direction>
    <autoHide>no</autoHide>
    <hideDelay>300</hideDelay>
    <showDelay>300</showDelay>
    <moveButton>Middle</moveButton>
  </dock>
  <!-- ################################ Keybindings ################################ -->
  <keyboard>
    <rebindOnMappingNotify>yes</rebindOnMappingNotify>
    <chainQuitKey>C-g</chainQuitKey>
    <!-- ######## Global Actions ######## -->
    <!-- Action : ShowMenu -->
    <keybind key="W-space">
      <action name="ShowMenu">
        <menu>root-menu</menu>
      </action>
    </keybind>
    <keybind key="A-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <keybind key="A-S-space">
      <action name="ShowMenu">
        <menu>client-list-combined-menu</menu>
      </action>
    </keybind>
    <keybind key="C-A-space">
      <action name="ShowMenu">
        <menu>app-menu</menu>
      </action>
    </keybind>
    <!-- Action : NextWindow -->
    <keybind key="W-Tab">
      <action name="NextWindow">
        <dialog>list</dialog>
        <bar>no</bar>
        <raise>yes</raise>
        <allDesktops>yes</allDesktops>
        <panels>no</panels>
        <desktop>no</desktop>
        <linear>no</linear>
        <interactive>yes</interactive>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow">
        <dialog>list</dialog>
        <bar>no</bar>
        <raise>yes</raise>
        <allDesktops>no</allDesktops>
        <panels>no</panels>
        <desktop>no</desktop>
        <linear>no</linear>
        <interactive>yes</interactive>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Action : GoToDesktop -->
    <keybind key="C-A-Right">
      <action name="GoToDesktop">
        <to>next</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <keybind key="C-A-Left">
      <action name="GoToDesktop">
        <to>previous</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <!-- Action : Add/Remove Desktop -->
    <keybind key="W-equal">
      <action name="AddDesktop">
        <where>last</where>
      </action>
      <action name="Execute">
        <command>dunstify -u low -h string:x-dunst-stack-tag:obaction "Added New Desktop"</command>
      </action>
    </keybind>
    <keybind key="W-minus">
      <action name="RemoveDesktop">
        <where>last</where>
      </action>
      <action name="Execute">
        <command>dunstify -u low -h string:x-dunst-stack-tag:obaction "Removed Last Desktop"</command>
      </action>
    </keybind>
    <!-- Action : ToggleShowDesktop -->
    <keybind key="W-d">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <!-- Action : Session -->
    <keybind key="C-S-R">
      <action name="Execute">
        <command>dunstify -u low -h string:x-dunst-stack-tag:obaction "Configuration Reloaded!"</command>
      </action>
      <action name="Reconfigure"/>
    </keybind>
    <keybind key="C-S-BackSpace">
      <action name="Restart"/>
    </keybind>
    <keybind key="C-A-Delete">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </keybind>
    <!-- ######## Window Actions ######## -->
    <!-- Action : SendToDesktop -->
    <keybind key="W-S-Right">
      <action name="SendToDesktop">
        <to>next</to>
        <wrap>yes</wrap>
        <follow>yes</follow>
      </action>
    </keybind>
    <keybind key="W-S-Left">
      <action name="SendToDesktop">
        <to>previous</to>
        <wrap>yes</wrap>
        <follow>yes</follow>
      </action>
    </keybind>
    <keybind key="S-W-1">
      <action name="SendToDesktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="S-W-2">
      <action name="SendToDesktop">
        <desktop>2</desktop>
      </action>
    </keybind>
    <keybind key="S-W-3">
